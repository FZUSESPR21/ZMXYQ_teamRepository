/* components/party/party_item/party_item.wxss */
page,view,text,swiper,swiper-item,image,navigator,button{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}


.panel1{
  height: 200rpx;
  background-color:#f7e5ff;
  margin: 20rpx;
  border-radius: 20rpx;
}

.col1{
  background-color: #cc66ff;
  /* width: 100%; */
  height: 100%;
  /* border-radius: 10rpx; */
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.col2{
  background-color: #f7e5ff;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  height: 100%;
  padding: 20rpx;
}

.content{
  width: 100%;
  min-height: 80%;
  max-height: 80%;
  max-width: 100%;
}

.content-text{
    font-size: 25rpx;
    font-family: 'Droid Sans', sans-serif;
    font-weight: 900;
    color: #000000;
    padding: 20rpx;
    text-shadow: none; 
}

.other-mes-text{
  font-size: 20rpx;
  font-style: normal;
  font-family: 'Droid Sans', sans-serif;
  font-weight: 500;
  font-variant: normal;
  color: 	 #52527a;
  padding: 6rpx;
  text-shadow: none; 
}

