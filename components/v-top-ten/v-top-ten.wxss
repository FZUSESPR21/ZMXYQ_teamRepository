
.top-ten{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 90rpx;
  /* margin-left: 30rpx; */
  margin-right: 30rpx;
}

.top-ten-text{
  display: flex;
  font-size: 12px;
  color: #ffffff;
  margin: 8% 0 0 22%;
}

.van-icon-fire{
  display: flex;
}

.left{
  display: flex;
  flex-direction: column;
  width: 20%;
  height: 100%;
  background-color: #ff6b39;
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}

.swiper{
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 100%;
}

.swiper-item{
  display: flex;
  flex-direction: row;
  background-color: #fffbe8;
  height: 100%;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.swiper-item-text{
  display: flex;
  border: none;
  font-size: 30rpx;
}





