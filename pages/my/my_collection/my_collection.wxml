<view class="post_main">
    <navigator class="post_item" wx:for="{{collectionList}}" wx:key="{{index}}"
               bindtouchstart="handleTouchStart"
               bindtouchend="handleTouchEnd"
               bindlongpress="handleLongPress"
               bindtap="handleClick"
               data-pid="{{item.postId}}"
                data-id="{{item.id}}">
        <view class="txt">
            <view class="content">
                {{item.postContent}}
            </view>
            <view class="info">
                <view class="user">
                    <van-image round width="1.2rem" height="1.2rem" src="{{item.iconUrl}}"></van-image>
                    <view class="nickname">{{item.nickName}}</view>
                </view>

                <view class="time">{{item.postTime}}</view>
            </view>
        </view>
    </navigator>
</view>

<van-action-sheet
        show="{{ show }}"
        actions="{{ actions }}"
        cancel-text="Cancel"
        bind:close="onClose"
        bind:select="onSelect"
        bind:cancel="onClose"
/>

<van-dialog id="van-dialog" />