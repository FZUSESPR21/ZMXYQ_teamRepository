    <van-tabs active="{{ active }}" bind:change="onChange" color="#f2774d" line-width="50%">

        <van-tab title="校友圈">
            <view class="comment_main">
                <navigator class="comment_item" wx:for="{{postCommentsList}}" wx:key="{{index}}">
                    <view class="txt">
                        <view class="content">
                            {{item.message}}
                        </view>
                        <view class="info">
                            <view class="nickname">Camouflage</view>
                            <view class="time">24分钟前</view>
                        </view>
                    </view>
                </navigator>
            </view>
        </van-tab>

        <van-tab title="组团">
            <view class="comment_main">
                <navigator class="comment_item" wx:for="{{partyCommentsList}}" wx:key="{{index}}">
                    <view class="txt">
                        <view class="content">
                            {{item.information}}
                        </view>
                        <view class="info">
                            <view class="nickname">Camouflage</view>
                            <view class="time">24分钟前</view>
                        </view>
                    </view>
                </navigator>
            </view>
        </van-tab>
    </van-tabs>
</view>