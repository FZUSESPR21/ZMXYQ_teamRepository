.no-list{
    color:rgb(128,128,128);
    margin:0 auto;
    margin-top:30rpx;
}
.comment_main{
    padding: 0 25rpx;
}

.comment_item{
    margin: 15rpx 0;
    border-bottom: 1rpx solid rgba(206, 198, 198, 0.55);
}

.comment_item .txt{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.user{
    display: flex;
    justify-content: center;
    align-content: center;
}

.content{
    font-size: 30rpx;
}

.nickname{
    color: #696969;
    font-size: 25rpx;
}

.time{
    color: #afafaf;
    font-size: 24rpx;
}

.info{
    display: flex;
    padding-top: 20rpx;
    justify-content: space-between;
}