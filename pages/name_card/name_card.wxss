/* pages/name_card/name_card.wxss */
.container{
  height: 1500rpx;
  padding: 0;
  font-size: 14rpx;
  background: #F0F4F3;
  color: #000;
}
.container .card-item .card-source .v-name{
  margin-left:20rpx;
  margin-top:-10rpx ; 
  font-size:24rpx;
}

.container .card-item .card-source .v-time{
  margin-left:30rpx;
  margin-top:-10rpx ; 
  font-size:20rpx;
}

.container .card-source{
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #ffffff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eeeeee;
}
.container .card-item .card-source{
  width: 690rpx;
  left: 0;
  height: 50rpx;
}
.container .card-item .card-source .avatar{
  position: relative;
  display: inline-block;
}

.container .card-item .card-source .avatar image{
  /*position: absolute;*/
  display: inline-block;
  width: 55rpx;
  height: 55rpx;
  border-radius: 55rpx;
  top: 10rpx;
  vertical-align: middle;
}
.container .card-item  .card-source text{
  /*position: absolute;*/
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  color: #a0acac;
  font-size: 26rpx;
}
.container .card-item  .card-source .item-more{
  display: inline-block;
  width: 40rpx;
  height: 45rpx;
  float: right;
}



